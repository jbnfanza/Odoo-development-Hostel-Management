<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_student_inf" model="ir.actions.act_window">
        <field name="name">student information</field>
        <field name="res_model">student_information</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="list_student" model="ir.ui.view">
        <field name="name">list.student</field>
        <field name="model">student_information</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="student_id"/>
                <field name="name_id"/>
            </list>
        </field>
    </record>
    <record id="form_student" model="ir.ui.view">
        <field name="name">form.student</field>
        <field name="model">student_information</field>
        <field name="arch" type="xml">
            <form>


                <header>


                    <button name="alot_button" string="ALOT ROOM" type="object" class="oe_highlight"/>
                    <button name="action_vacate" string="Vacate" type="object" class="btn-danger"/>



                </header>
                <sheet>
                    <header>

                        <field name="image" widget="image" class="oe_avatar"/>
                    </header>
                      <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_invoices" class="oe_stat_button" icon="fa-file-invoice">
                            <field string="Invoices" name="invoice_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group call="1">
                            <field name="name"/>
                            <field name="name_id"/>
                            <field name="student_id"/>
                            <field name="date_of_birth"/>
                            <field name="age" compute='_compute_age'/>

                        </group>
                        <group call="2">
                            <field name="email"/>
                            <field name="receive_mail"/>
                            <field name="company_id"/>
                            <field name="partner_id"/>
                        </group>

                    </group>

                    <notebook>
                        <page string="Contact Address">
                            <group>
                                <group call="1">
                                    <field name="street" placeholder="street..."/>
                                    <field name="street_two" placeholder="street2..."/>
                                    <field name="city" placeholder="city"/>
                                    <field name="country_id" placeholder="Country"/>
                                </group>
                                <group call="2">

                                    <field name="state_id" placeholder="State"/>
                                    <field name="zip" placeholder="ZIP"/>
                                </group>

                            </group>
                        </page>

                    </notebook>

                </sheet>
                <chatter/>
            </form>
        </field>

    </record>
</odoo>
